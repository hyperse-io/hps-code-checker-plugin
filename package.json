{
  "name": "@hyperse/hps-code-checker-rspack-plugin",
  "version": "1.0.0-alpha.5",
  "description": "The HPS Code Checker Plugin.",
  "keywords": [
    "hyperse",
    "hps",
    "rspack",
    "frontend build tool",
    "web applications",
    "micro modules",
    "modular",
    "swc",
    "rust",
    "webpack"
  ],
  "homepage": "https://hyperse.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperse-io/hps-code-checker-plugin.git"
  },
  "license": "SEE LICENSE IN FILE 'LICENSE'",
  "author": {
    "name": "hyperse net",
    "url": "https://github.com/hyperse-net"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "index.js"
  ],
  "scripts": {
    "prepare": "husky",
    "clean:rust": "rimraf crates/binding/npm",
    "build:tsc": "pnpm run clean:rust && rimraf dist && tsc -p ./tsconfig.build.json",
    "build": "pnpm run --filter @hyperse/hps-code-checker-rust build",
    "lint": "pnpm run lint",
    "typecheck": "pnpm run typecheck",
    "lint-staged": "lint-staged --allow-empty"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@rspack/core": "1.5.2",
    "@hyperse/hps-code-checker-rust": "workspace:*"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@hyperse/eslint-config-hyperse": "^1.4.7",
    "@hyperse/ts-node": "^1.0.3",
    "@napi-rs/cli": "^3.0.1",
    "@types/node": "^24.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "@vitest/ui": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0",
    "pnpm": ">=10.15.0"
  },
  "lint-staged": {
    "*.toml": "npx taplo format"
  }
}
