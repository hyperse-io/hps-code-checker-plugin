{
  "name": "hyperse-hps-code-checker-plugin",
  "version": "0.0.1",
  "private": true,
  "description": "The HPS Code Checker Plugin.",
  "keywords": [
    "hyperse",
    "hps",
    "rspack",
    "frontend build tool",
    "web applications",
    "micro modules",
    "modular",
    "swc",
    "rust",
    "webpack"
  ],
  "homepage": "https://hyperse.net",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperse-io/hps-code-checker-plugin"
  },
  "license": "SEE LICENSE IN FILE 'LICENSE'",
  "author": {
    "name": "hyperse net",
    "url": "https://github.com/hyperse-net"
  },
  "type": "module",
  "workspaces": [
    "website",
    "packages/*",
    "crates/*",
    "examples/*"
  ],
  "scripts": {
    "g:clean": "yarn clean:global-cache && yarn workspaces foreach -At run clean",
    "g:build": "yarn g:build-release",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "g:build-release": "yarn workspaces foreach -At run build-release",
    "g:build-rust": "yarn workspace @hyperse/hps-code-checker-rust run build",
    "g:build-local": "yarn workspaces foreach -At run build",
    "g:test": "yarn workspaces foreach -At run test",
    "g:test-unit": "yarn workspaces foreach --all -ptv run test-unit",
    "g:test-e2e": "yarn workspaces foreach -At run test-e2e",
    "g:test-coverage": "yarn workspaces foreach -At run test-coverage",
    "g:lint": "yarn workspaces foreach -At run lint",
    "g:typecheck": "yarn workspaces foreach -At run typecheck",
    "g:lint-staged-files": "lint-staged --allow-empty",
    "g:fix-all-files": "yarn workspaces foreach -At run fix-all-files",
    "g:changeset": "changeset",
    "g:version": "changeset version",
    "g:release": "yarn g:build-release && changeset publish",
    "g:publish:rust": "yarn workspace @hyperse/hps-code-checker-rust run publish:rust",
    "clean:global-cache": "rimraf --no-glob ./dist ./coverage ./__data__ ./config/__data__ ./_release ./tsconfig.tsbuildinfo",
    "g:cz": "cz",
    "g:publish-local": "yarn changeset version && cd scripts && ./publish-to-verdaccio.sh",
    "prepare": "yarn husky"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@hyperse/eslint-config-hyperse": "^1.4.7",
    "@hyperse/ts-node": "^1.0.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": ">=20.0.0",
    "npm": "please-use-yarn",
    "yarn": ">=1.22.0"
  }
}
