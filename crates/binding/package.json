{
  "name": "@hyperse/hps-code-checker-rust",
  "homepage": "https://github.com/hyperse-io/hps-code-checker-plugin",
  "version": "1.0.0-alpha.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperse-io/hps-code-checker-plugin",
    "directory": "crates/binding"
  },
  "author": {
    "name": "Hyperse",
    "url": "https://github.com/hyperse-io"
  },
  "type": "commonjs",
  "license": "SEE LICENSE IN FILE 'LICENSE'",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "napi build --platform",
    "clean": "rimraf --no-glob ./dist  ./node_modules ./coverage ./__data__ ./config/__data__ ./_release ./tsconfig.tsbuildinfo",
    "test": "yarn build && run-s test-unit",
    "test-task": "vitest run",
    "test-unit": "vitest run",
    "test-watch": "vitest watch --ui",
    "fix-all-files": "eslint . --fix",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "prepublishOnly": "npx napi pre-publish -t npm"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.4.8",
    "@napi-rs/cli": "^3.0.1",
    "@swc/core": "^1.13.5",
    "@types/node": "^24.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "napi": {
    "binaryName": "binding",
    "targets": [
      "x86_64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "i686-pc-windows-msvc",
      "aarch64-unknown-linux-gnu",
      "aarch64-apple-darwin",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "armv7-linux-androideabi",
      "armv7-unknown-linux-gnueabihf",
      "aarch64-linux-android"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  }
}