{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "allowJs": false,
    "noImplicitAny": true,
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@hyperse/hps-code-checker-rust": ["./crates/binding"],
    },
    "types": ["vitest/globals", "node"]
  },
  "include": ["**/*.ts", "**/*.tsx", "index.js"],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}
